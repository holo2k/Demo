<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rouding2"
    tools:context=".login">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/buttongetstarted"
        android:padding="90dp"
        android:src="@drawable/icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <com.google.android.material.tabs.TabLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/buttongetstarted"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.364"
        app:tabIndicatorColor="@color/red"
        app:tabTextAppearance="@style/TextAppearance.AppCompat.Body1"
        app:tabTextColor="#000000">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabitemlogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabitemsignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign-up" />

    </com.google.android.material.tabs.TabLayout>
    <TextView
        android:id="@+id/textView"
        android:layout_width="109dp"
        android:layout_height="19dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="60dp"
        android:text="Email address"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />
    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="284dp"
        android:layout_height="36dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="67dp"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />
    <TextView
        android:id="@+id/textViewpass"
        android:layout_width="109dp"
        android:layout_height="19dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="30dp"
        android:text="Password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextEmail" />
    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="284dp"
        android:layout_height="36dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="67dp"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewpass"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="64dp"
        android:text="Forgot passcode?"
        android:textColor="@color/red"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPassword">
    </TextView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/appCompatButton"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginTop="650dp"
        android:background="@drawable/rounding"
        android:fontFamily="@font/allerta"
        android:paddingLeft="115dp"
        android:paddingEnd="115dp"
        android:text="Login"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="mainActivity"/>


</androidx.constraintlayout.widget.ConstraintLayout>